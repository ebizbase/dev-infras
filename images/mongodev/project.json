{
  "name": "mongodev",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "metadata": {
    "version": "1.0.0",
    "registries": [
      "ghcr.io",
      "docker.io"
    ],
    "namespace": "ebizbase/mongodev",
    "labels": {
      "org.opencontainers.image.source": "https://github.com/ebizbase/dev-infras",
      "org.opencontainers.image.description": "Mongodb development image with mongo and mongo-express",
      "org.opencontainers.image.licenses": "MIT"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@ebizbase/nx-docker:build",
      "options": {
        "load": true,
        "tags": [
          "edge"
        ]
      }
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run --rm -p 8081:8081 ebizbase/mongodev:edge curl -s localhost:8081"
      }
    },
    "publish": {
      "executor": "@ebizbase/nx-docker:build",
      "options": {
        "push": true,
        "tags": [
          "latest",
          "{major}",
          "{major}.{minor}",
          "{major}.{minor}.{patch}"
        ]
      }
    }
  }
}
