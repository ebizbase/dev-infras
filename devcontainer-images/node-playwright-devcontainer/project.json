{
  "name": "node-playwright-devcontainer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "devcontainer-images/node-playwright-devcontainer",
  "projectType": "application",
  "metadata": {
    "$schema": "../../nx-plugins/nx-devcontainer/metadata.schema.json",
    "version": "1.0.0",
    "registries": [
      "ghcr.io"
    ],
    "namespace": "ebizbase/node-playwright-devcontainer",
    "labels": {
      "org.opencontainers.image.source": "https://github.com/ebizbase/dev-infras",
      "org.opencontainers.image.description": "The image base on `node-devcontainer` with playwright installed (both OS dependencies and browser binary)",
      "org.opencontainers.image.licenses": "MIT"
    }
  },
  "targets": {
    "build": {
      "executor": "@ebizbase/nx-internal:build-devcontainer-image",
      "options": {
        "tags": [
          "edge"
        ]
      }
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker run --rm ghcr.io/ebizbase/node-playwright-devcontainer:edge node --version"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "@ebizbase/nx-internal:build-devcontainer-image",
      "options": {
        "push": true,
        "tags": [
          "latest",
          "{major}",
          "{major}.{minor}",
          "{major}.{minor}.{patch}"
        ]
      }
    }
  }
}
